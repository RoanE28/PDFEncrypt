<Window x:Class="PDFEncrypt.ImageLicense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFEncrypt"
        mc:Ignorable="d"
        Title="PDF Encrypt - Image License" MinHeight="300" Height="300" MinWidth="500" Width="650" WindowStartupLocation="CenterScreen" Icon="Icons/pdf.png" >
    <Grid>
        <Grid Margin="25">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Source="Icons/pdf.png" Width="150" VerticalAlignment="Top" Margin="10"/>
            <TextBlock FontSize="20" Grid.Column="1"  Margin="10" HorizontalAlignment="Stretch" TextWrapping="Wrap">
                Icons made by
                <Hyperlink NavigateUri="https://www.flaticon.com/authors/pixel-buddha" RequestNavigate="Hyperlink_RequestNavigate">
                    Pixel Buddha
                </Hyperlink>
                from
                <Hyperlink NavigateUri="https://www.flaticon.com/" RequestNavigate="Hyperlink_RequestNavigate">
                    Flaticon
                </Hyperlink>
            </TextBlock>

        </Grid>
    </Grid>
</Window>
